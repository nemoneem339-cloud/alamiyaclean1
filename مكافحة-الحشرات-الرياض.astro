---
/**
 * مقالة: مكافحة الحشرات في الرياض
 */
import Base from '../../layouts/Base.astro';
import { company, services } from '../../data/siteInfo';
import { blogPosts } from '../../data/blogPosts';

const post = blogPosts.find(p => p.slug === 'مكافحة-الحشرات-الرياض')!;
const relatedPosts = blogPosts.filter(p => p.id !== post.id).slice(0, 3);
---

<Base 
  title={post.title}
  description={post.excerpt}
>

  <!-- Schema Markup for Article -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": post.excerpt,
    "image": post.image,
    "author": { "@type": "Organization", "name": company.name },
    "publisher": { "@type": "Organization", "name": company.name },
    "datePublished": post.publishDate
  })} />

  <!-- ==================== ARTICLE HEADER ==================== -->
  <section class="bg-slate-900 text-white py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/50 to-slate-900 z-0"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto">

        
        <span class="inline-block bg-secondary text-white px-4 py-1 rounded-full text-sm font-bold mb-4">{post.category}</span>
        <h1 class="text-3xl md:text-5xl font-heading font-bold mb-6 leading-tight">{post.title}</h1>
        
        <div class="flex flex-wrap items-center gap-6 text-slate-300">
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            {post.author}
          </span>
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="18" height="18" x="3" y="4" rx="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            {new Date(post.publishDate).toLocaleDateString('ar-SA')}
          </span>
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            {post.readTime}
          </span>
        </div>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 -mt-8 relative z-20">
    <div class="max-w-4xl mx-auto">
      <img src={post.image} alt={post.title} class="w-full h-[400px] object-cover rounded-2xl shadow-2xl" />
    </div>
  </div>

  <!-- ==================== ARTICLE CONTENT ==================== -->
  <article class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Social Share -->
        <div class="flex items-center gap-3 mb-8 pb-8 border-b border-slate-100">
          <span class="text-sm font-bold text-slate-500">شارك المقال:</span>
          <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#1DA1F2] text-white flex items-center justify-center hover:opacity-80">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
          </a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#1877F2] text-white flex items-center justify-center hover:opacity-80">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href={`https://wa.me/?text=${encodeURIComponent(post.title + ' ' + company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#25D366] text-white flex items-center justify-center hover:opacity-80">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"></path></svg>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#0A66C2] text-white flex items-center justify-center hover:opacity-80">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          </a>
        </div>

        <!-- Summary Box -->
        <div class="bg-gradient-to-r from-primary/5 to-secondary/5 border-r-4 border-primary p-6 rounded-2xl mb-10">
          <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline></svg>
            الخلاصة
          </h2>
          <ul class="space-y-2 text-slate-700">
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>الرياض من أكثر المدن تعرضاً للحشرات بسبب المناخ الصحراوي</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>النمل الأبيض يسبب أضراراً بملايين الريالات سنوياً</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>المبيدات الحديثة آمنة ولا تتطلب مغادرة المنزل</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>الضمان على رش النمل الأبيض يصل لـ 15 سنة</span>
            </li>
          </ul>
        </div>

        <!-- Article Body -->
        <div class="prose prose-lg prose-slate max-w-none">
          
          <h2 class="text-2xl font-bold text-slate-900 mb-4">مقدمة: مشكلة الحشرات في الرياض</h2>
          
          <p class="text-slate-600 leading-relaxed mb-6">
            تُعتبر مدينة <strong>الرياض</strong> بيئة مثالية لتكاثر العديد من أنواع الحشرات بسبب مناخها الصحراوي الحار صيفاً والمعتدل شتاءً. من الصراصير إلى النمل الأبيض، ومن بق الفراش إلى الفئران - تواجه منازل الرياض تحديات متعددة تتطلب حلولاً احترافية.
          </p>

          <p class="text-slate-600 leading-relaxed mb-6">
            في <a href="/" class="text-primary font-bold hover:underline">العالمية كلين</a>، نتعامل مع <a href="/services/pest-control" class="text-primary font-bold hover:underline">مكافحة الحشرات</a> كعلم وفن في آن واحد. فريقنا المتخصص يستخدم أحدث تقنيات المكافحة المتكاملة (IPM) التي أثبتت فعاليتها عالمياً.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">أنواع الحشرات الشائعة في الرياض</h2>

          <h3 class="text-xl font-bold text-slate-900 mb-3">1. الصراصير</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            الصراصير من أكثر الحشرات إزعاجاً في منازل الرياض. هناك نوعان رئيسيان: <strong>الصرصور الألماني</strong> الصغير الذي يعيش في المطابخ، و<strong>الصرصور الأمريكي</strong> الكبير الذي يأتي من الصرف الصحي. كلاهما ينقل أمراضاً خطيرة ويتكاثر بسرعة مذهلة - أنثى واحدة يمكن أن تنتج 300 صرصور في السنة!
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">2. النمل الأبيض (الأرضة)</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            <strong>النمل الأبيض</strong> هو العدو الخفي الأخطر للمنازل في الرياض. يعيش تحت الأرض ويبني أنفاقاً للوصول إلى الخشب في منزلك. يمكن أن يسبب أضراراً هيكلية كارثية إذا لم يُكتشف مبكراً. الإحصائيات تشير إلى أن النمل الأبيض يسبب خسائر بملايين الريالات سنوياً في الرياض وحدها.
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">3. بق الفراش</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            بق الفراش عاد بقوة في السنوات الأخيرة، خاصة مع كثرة السفر. هذه الحشرات الصغيرة تختبئ في المراتب والأثاث وتخرج ليلاً لتتغذى على دم الإنسان، تاركة لدغات مؤلمة ومثيرة للحكة.
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">4. الفئران والقوارض</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            الفئران ليست مقززة فحسب، بل تنقل أمراضاً خطيرة وتسبب أضراراً للأسلاك الكهربائية والمواد الغذائية. وجود فأر واحد يعني عادة وجود المزيد، لأنها تتكاثر بسرعة كبيرة.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">طرق مكافحة الحشرات الحديثة</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            تطورت صناعة <strong>مكافحة الحشرات</strong> كثيراً في السنوات الأخيرة. لم نعد نعتمد على الرش التقليدي القوي الرائحة. إليك الطرق الحديثة التي نستخدمها:
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">تقنية الجل الأمريكي للصراصير</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            بدلاً من رش المبيدات، نستخدم جل طُعم يجذب الصراصير. عندما يأكل الصرصور الجل ويعود للعش، ينقل السم لباقي المستعمرة من خلال التلامس والفضلات. النتيجة: القضاء على 95-100% من المستعمرة خلال أسبوعين. الأفضل؟ لا حاجة لمغادرة المنزل!
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">حقن التربة للنمل الأبيض</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            لمكافحة النمل الأبيض، نحفر خنادق حول أساسات المبنى ونحقن مبيداً خاصاً يخلق حاجزاً كيميائياً يمنع النمل من الوصول. هذه الطريقة توفر حماية تمتد من 10 إلى 15 سنة!
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">التعقيم الحراري لبق الفراش</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            بق الفراش مقاوم للعديد من المبيدات، لكنه لا يستطيع تحمل الحرارة العالية. نستخدم معدات خاصة لرفع حرارة الغرفة إلى 50-60 درجة مئوية لعدة ساعات، مما يقتل جميع مراحل حياة البق من البيض للبالغ.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">علامات تدل على إصابة منزلك بالحشرات</h2>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>الصراصير:</strong> وجود فضلات سوداء صغيرة في الأدراج والخزائن</li>
            <li><strong>النمل الأبيض:</strong> أنابيب طينية على الجدران، خشب أجوف عند النقر</li>
            <li><strong>بق الفراش:</strong> بقع دم صغيرة على الملاءات، لدغات في خط مستقيم</li>
            <li><strong>الفئران:</strong> فضلات على شكل حبوب أرز، أصوات حركة ليلاً</li>
          </ul>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">نصائح للوقاية من الحشرات</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            الوقاية خير من العلاج. إليك نصائح عملية لتقليل خطر الإصابة بالحشرات:
          </p>

          <ol class="list-decimal list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>حافظ على نظافة المطبخ:</strong> لا تترك بقايا طعام أو أطباق متسخة ليلاً</li>
            <li><strong>أغلق الفتحات:</strong> سد الشقوق حول الأنابيب والنوافذ</li>
            <li><strong>تخلص من الرطوبة:</strong> أصلح أي تسريبات مياه فوراً</li>
            <li><strong>احفظ الأطعمة:</strong> استخدم أوعية محكمة الإغلاق</li>
            <li><strong>نظف بانتظام:</strong> <a href="/blog/دليل-تنظيف-الفلل-بالرياض" class="text-primary font-bold hover:underline">التنظيف الدوري للمنزل</a> يقلل من مصادر غذاء الحشرات</li>
          </ol>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">متى تحتاج شركة مكافحة حشرات؟</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            بعض حالات الإصابة يمكن التعامل معها منزلياً، لكن هناك حالات تستدعي الاستعانة بمتخصصين:
          </p>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li>إذا رأيت صراصير نهاراً (علامة على إصابة شديدة)</li>
            <li>إذا اشتبهت في وجود نمل أبيض</li>
            <li>إذا فشلت المحاولات المنزلية بعد أسبوعين</li>
            <li>إذا كان لديك أطفال أو مرضى حساسية</li>
            <li>للعقود السنوية الوقائية</li>
          </ul>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">لماذا تختار العالمية كلين لمكافحة الحشرات؟</h2>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>فريق متخصص:</strong> فنيون مدربون ومرخصون من البلدية</li>
            <li><strong>مبيدات آمنة:</strong> معتمدة من هيئة الغذاء والدواء</li>
            <li><strong>ضمان حقيقي:</strong> ضمان من 3 أشهر إلى 15 سنة</li>
            <li><strong>بدون مغادرة:</strong> معظم خدماتنا لا تتطلب مغادرة المنزل</li>
            <li><strong>أسعار تنافسية:</strong> مع إمكانية العقود السنوية بخصومات</li>
          </ul>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">الخلاصة</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            <strong>مكافحة الحشرات في الرياض</strong> ضرورة وليست رفاهية. المناخ الصحراوي يجعل منازلنا عرضة لأنواع متعددة من الآفات التي يمكن أن تهدد صحة العائلة وسلامة الممتلكات. مع التقنيات الحديثة والمبيدات الآمنة، يمكنك الاستمتاع بمنزل نظيف وخالٍ من الحشرات دون قلق.
          </p>

          <p class="text-slate-600 leading-relaxed mb-6">
            تواصل مع <a href="/" class="text-primary font-bold hover:underline">العالمية كلين</a> اليوم للحصول على معاينة مجانية وعرض سعر. اتصل على <a href={`tel:${company.phone}`} class="text-primary font-bold hover:underline" dir="ltr">{company.phone}</a> أو تواصل عبر <a href={`https://wa.me/${company.whatsapp}`} class="text-primary font-bold hover:underline">واتساب</a>.
          </p>

        </div>

        <!-- Tags -->
        <div class="mt-10 pt-8 border-t border-slate-100">
          <span class="text-sm font-bold text-slate-500 mb-3 block">الكلمات المفتاحية:</span>
          <div class="flex flex-wrap gap-2">
            {post.keywords.map(keyword => (
              <span class="bg-slate-100 text-slate-600 px-3 py-1 rounded-full text-sm">{keyword}</span>
            ))}
          </div>
        </div>

        <!-- CTA Box -->
        <div class="mt-10 bg-gradient-to-r from-primary to-blue-700 p-8 rounded-2xl text-white text-center">
          <h3 class="text-2xl font-bold mb-3">تعاني من مشكلة حشرات؟</h3>
          <p class="text-blue-100 mb-6">احصل على معاينة مجانية وعرض سعر خلال 24 ساعة</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`tel:${company.phone}`} class="bg-white text-primary px-6 py-3 rounded-xl font-bold hover:bg-blue-50">اتصل الآن</a>
            <a href={`https://wa.me/${company.whatsapp}`} class="bg-green-500 text-white px-6 py-3 rounded-xl font-bold hover:bg-green-600">واتساب</a>
          </div>
        </div>

      </div>
    </div>
  </article>

  <!-- Related Articles -->
  <section class="py-16 bg-slate-50">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-heading font-bold text-slate-900 mb-8 text-center">مقالات ذات صلة</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {relatedPosts.map(p => (
          <a href={`/blog/${p.slug}`} class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
            <div class="h-40 overflow-hidden">
              <img src={p.image} alt={p.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform" />
            </div>
            <div class="p-4">
              <h3 class="font-bold text-slate-900 group-hover:text-primary transition-colors">{p.title}</h3>
              <span class="text-xs text-slate-400">{p.readTime}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

</Base>
