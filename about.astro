---
/**
 * صفحة عن الشركة - Enhanced for E-E-A-T
 * =====================================
 * 
 * محسّنة لـ Google E-E-A-T (Experience, Expertise, Authoritativeness, Trustworthiness)
 */

import Base from '../layouts/Base.astro';
import { company, whyUs, testimonials } from '../data/siteInfo';

// Achievements data for trust signals
const achievements = [
  { number: "+10", label: "سنوات خبرة", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>' },
  { number: "+5000", label: "عميل سعيد", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>' },
  { number: "+15000", label: "مشروع منجز", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>' },
  { number: "+50", label: "فني محترف", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>' }
];

// Certifications for trust
const certifications = [
  { name: "سجل تجاري موثق", number: "1010XXXXXX", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>' },
  { name: "عضوية الغرفة التجارية", number: "الرياض", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 21h18"></path><path d="M5 21V7l8-4v18"></path><path d="M19 21V11l-6-4"></path><path d="M9 9v.01"></path><path d="M9 12v.01"></path><path d="M9 15v.01"></path><path d="M9 18v.01"></path></svg>' },
  { name: "شهادة ISO 9001", number: "إدارة الجودة", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="8" r="6"></circle><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"></path></svg>' },
  { name: "ترخيص مكافحة الحشرات", number: "البلدية", icon: '<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><path d="m9 12 2 2 4-4"></path></svg>' }
];

// Team members
const teamMembers = [
  { name: "بلال المتولي", role: "المدير العام", experience: "+15 سنة خبرة", image: "/images/belal.png" },
  { name: "محمد العتيبي", role: "مدير العمليات", experience: "+12 سنة خبرة", image: "/images/team.jpg" },
  { name: "خالد السعيد", role: "مشرف الجودة", experience: "+8 سنوات خبرة", image: "/images/team.jpg" },
  { name: "سامي الحربي", role: "خدمة العملاء", experience: "+6 سنوات خبرة", image: "/images/team.jpg" }
];

// Timeline for company history
const timeline = [
  { year: "2014", title: "التأسيس", desc: "بدأنا كفريق صغير من 5 أفراد في الرياض" },
  { year: "2016", title: "التوسع", desc: "وصلنا لـ 20 موظف وأضفنا خدمات مكافحة الحشرات" },
  { year: "2018", title: "شهادة الجودة", desc: "حصلنا على شهادة ISO 9001 في إدارة الجودة" },
  { year: "2020", title: "التطوير", desc: "استثمرنا في معدات إيطالية وألمانية حديثة" },
  { year: "2024", title: "الريادة", desc: "+50 موظف و +5000 عميل سعيد" }
];
---

<Base 
  title="عن الشركة" 
  description="تعرف على شركة العالمية كلين - أفضل شركة تنظيف بالرياض منذ 2014. خبرة +10 سنوات، +5000 عميل سعيد، فريق محترف وشهادات معتمدة."
>

  <!-- AboutPage Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "عن شركة العالمية كلين",
    "description": "تعرف على شركة العالمية كلين - أفضل شركة تنظيف بالرياض",
    "mainEntity": {
      "@type": "Organization",
      "name": company.name,
      "foundingDate": "2014",
      "foundingLocation": "الرياض، المملكة العربية السعودية",
      "numberOfEmployees": {
        "@type": "QuantitativeValue",
        "value": 50
      },
      "award": ["شهادة ISO 9001", "عضوية الغرفة التجارية"],
      "slogan": "نحن نعتني بمنزلك كما تعتني به أنت"
    }
  })} />

  <!-- ==================== HEADER ==================== -->
  <section class="bg-slate-900 text-white py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/50 to-slate-900 z-0"></div>
    <div class="absolute top-0 left-0 w-96 h-96 bg-secondary/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-72 h-72 bg-primary/30 rounded-full blur-3xl"></div>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <span class="inline-flex items-center gap-2 bg-white/10 backdrop-blur text-white px-5 py-2 rounded-full text-sm font-medium mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        تأسست عام 2014
      </span>
      <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">من نحن</h1>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
        رحلة نجاح تمتد لأكثر من <strong class="text-secondary">عقد كامل</strong> في خدمة منازل الرياض بأعلى معايير الجودة والاحترافية
      </p>
    </div>
  </section>


  <!-- ==================== TRUST BADGES ==================== -->
  <section class="py-8 bg-white border-b border-slate-100">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {achievements.map(item => (
          <div class="flex items-center gap-4 p-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center text-primary shrink-0" set:html={item.icon}></div>
            <div>
              <div class="text-2xl font-bold text-slate-900">{item.number}</div>
              <div class="text-sm text-slate-500">{item.label}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ==================== OUR STORY ==================== -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-16">
        
        <!-- Image -->
        <div class="lg:w-1/2 relative">
          <div class="absolute -top-4 -right-4 w-full h-full bg-gradient-to-br from-primary to-secondary rounded-3xl"></div>
          <img 
            src="/images/about-story.jpg"
            alt="فريق العالمية كلين للتنظيف - أكثر من 50 موظف محترف"
            class="relative rounded-3xl shadow-2xl w-full h-[450px] object-cover"
            loading="lazy"
          />
          <!-- Floating Badge -->
          <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-2xl shadow-xl">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center text-white">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><path d="m9 12 2 2 4-4"></path></svg>
              </div>
              <div>
                <div class="text-sm text-slate-500">شركة</div>
                <div class="font-bold text-slate-900">موثوقة ومرخصة</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Content -->
        <div class="lg:w-1/2">
          <span class="inline-block bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-bold mb-4">قصتنا</span>
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900 mb-6">
            من شركة صغيرة إلى <span class="text-primary">علامة رائدة</span>
          </h2>
          
          <p class="text-slate-600 leading-relaxed mb-6 text-lg">
            بدأت شركة <strong>العالمية كلين</strong> رحلتها في عام <strong>2014</strong> برؤية واضحة: تقديم خدمات تنظيف بمعايير عالمية في قلب الرياض. ما بدأ كفريق صغير من 5 أفراد، تطور ليصبح اليوم فريقاً يضم أكثر من <strong>50 متخصصاً</strong> في مختلف مجالات النظافة.
          </p>
          
          <p class="text-slate-600 leading-relaxed mb-8">
            نؤمن بأن النظافة ليست رفاهية، بل هي <strong>حق لكل أسرة</strong>. لذلك نسعى دائماً لتقديم أفضل الخدمات بأسعار تنافسية، مع الحفاظ على أعلى معايير الجودة والأمان. نستخدم أحدث المعدات الإيطالية والألمانية، ومواد تنظيف آمنة ومعتمدة.
          </p>
          
          <!-- Key Points -->
          <div class="grid grid-cols-2 gap-4">
            <div class="flex items-center gap-3 bg-slate-50 p-3 rounded-xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-500"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
              <span class="text-sm font-medium text-slate-700">معدات إيطالية وألمانية</span>
            </div>
            <div class="flex items-center gap-3 bg-slate-50 p-3 rounded-xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-500"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
              <span class="text-sm font-medium text-slate-700">مواد آمنة ومعتمدة</span>
            </div>
            <div class="flex items-center gap-3 bg-slate-50 p-3 rounded-xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-500"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
              <span class="text-sm font-medium text-slate-700">ضمان على الخدمة</span>
            </div>
            <div class="flex items-center gap-3 bg-slate-50 p-3 rounded-xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-500"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
              <span class="text-sm font-medium text-slate-700">خدمة 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ==================== TIMELINE ==================== -->
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-bold mb-4">رحلتنا</span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900">محطات النجاح</h2>
      </div>
      
      <div class="max-w-4xl mx-auto relative">
        <!-- Timeline Line -->
        <div class="absolute right-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary via-secondary to-primary hidden md:block z-0"></div>
        
        <div class="space-y-8 relative z-10">
          {timeline.map((item, index) => (
            <div class="flex gap-8 items-start">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-bold text-lg shrink-0 shadow-lg shadow-primary/30 relative z-20">
                {item.year}
              </div>
              <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex-1">
                <h3 class="text-xl font-bold text-slate-900 mb-2">{item.title}</h3>
                <p class="text-slate-600">{item.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>


  <!-- ==================== CERTIFICATIONS ==================== -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-bold mb-4">الاعتمادات</span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900">شهادات وتراخيص رسمية</h2>
        <p class="text-slate-500 mt-4 max-w-xl mx-auto">نعمل بشكل قانوني ومرخص من الجهات الحكومية المختصة</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        {certifications.map(cert => (
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-2xl border-2 border-slate-100 text-center hover:border-primary/30 hover:shadow-lg transition-all group">
            <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform" set:html={cert.icon}></div>
            <h3 class="font-bold text-slate-900 mb-1">{cert.name}</h3>
            <p class="text-sm text-secondary font-medium">{cert.number}</p>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ==================== OUR VALUES ==================== -->
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-bold mb-4">قيمنا</span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900">ما يميزنا عن الآخرين</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {whyUs.map((value) => (
          <article class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 text-center hover:shadow-xl transition-all duration-300 group">
            <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform" set:html={value.icon}>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">{value.title}</h3>
            <p class="text-slate-500 leading-relaxed">{value.desc}</p>
          </article>
        ))}
      </div>
    </div>
  </section>


  <!-- ==================== OUR TEAM ==================== -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-bold mb-4">فريقنا</span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900">خبراء في خدمتك</h2>
        <p class="text-slate-500 mt-4 max-w-xl mx-auto">فريق متخصص بخبرات تمتد لسنوات في مجال التنظيف والصيانة</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        {teamMembers.map(member => (
          <article class="text-center group" itemscope itemtype="https://schema.org/Person">
            <div class="relative mb-4">
              <img 
                src={member.image} 
                alt={member.name}
                class="w-32 h-32 mx-auto rounded-2xl object-cover shadow-lg group-hover:scale-105 transition-transform"
                loading="lazy"
                itemprop="image"
              />
              <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 bg-gradient-to-r from-primary to-secondary text-white text-xs font-bold px-3 py-1 rounded-full">
                {member.experience}
              </div>
            </div>
            <h4 class="font-bold text-slate-900" itemprop="name">{member.name}</h4>
            <p class="text-sm text-secondary font-medium" itemprop="jobTitle">{member.role}</p>
          </article>
        ))}
      </div>
    </div>
  </section>


  <!-- ==================== TESTIMONIAL HIGHLIGHT ==================== -->
  <section class="py-20 bg-gradient-to-br from-primary to-blue-800 text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-secondary/20 rounded-full blur-3xl"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor" class="mx-auto mb-6 opacity-30"><path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"></path></svg>
        
        <blockquote class="text-2xl md:text-3xl font-medium leading-relaxed mb-8">
          "{testimonials[0].content}"
        </blockquote>
        
        <div class="flex items-center justify-center gap-4">
          <div class="w-14 h-14 rounded-full bg-white/20 flex items-center justify-center text-2xl font-bold">
            {testimonials[0].name.charAt(0)}
          </div>
          <div class="text-right">
            <div class="font-bold text-lg">{testimonials[0].name}</div>
            <div class="text-blue-200">{testimonials[0].role}</div>
          </div>
        </div>
        
        <!-- Rating -->
        <div class="flex justify-center gap-1 mt-6">
          {[1,2,3,4,5].map(star => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill={star <= testimonials[0].rating ? "#FFD700" : "none"} stroke="#FFD700" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
          ))}
        </div>
      </div>
    </div>
  </section>


  <!-- ==================== CTA ==================== -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="bg-gradient-to-r from-slate-900 to-primary rounded-3xl p-10 md:p-16 text-center relative overflow-hidden shadow-2xl">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-secondary/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
        
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-6 relative z-10">
          هل تريد معرفة المزيد؟
        </h2>
        <p class="text-slate-300 text-lg mb-8 max-w-xl mx-auto relative z-10">
          تواصل معنا الآن واحصل على استشارة مجانية واعرف كيف يمكننا مساعدتك
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center relative z-10">
          <a href={`tel:${company.phone}`} class="inline-flex items-center justify-center gap-2 bg-white text-primary px-8 py-4 rounded-xl font-bold text-lg hover:bg-blue-50 transition-colors shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"></path></svg>
            اتصل الآن
