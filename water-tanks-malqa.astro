---
/**
 * صفحة تنظيف خزانات حي الملقا
 * ===========================
 * Local SEO optimized page
 */

import Base from '../../layouts/Base.astro';
import { company, services } from '../../data/siteInfo';

const neighborhood = "الملقا";
const service = services.find(s => s.slug === 'water-tanks');

const pageTitle = `شركة تنظيف خزانات حي ${neighborhood} بالرياض`;
const pageDescription = `أفضل شركة تنظيف خزانات في حي ${neighborhood} بالرياض - تعقيم وغسيل الخزانات، عزل إيبوكسي، شهادة صحية معتمدة من البلدية.`;

const howToSteps = [
  { name: "الاتصال والحجز", text: "تواصل معنا عبر الهاتف أو الواتساب لحجز موعد مناسب" },
  { name: "تفريغ الخزان", text: "نقوم بسحب المياه الموجودة في الخزان بالكامل" },
  { name: "التنظيف العميق", text: "تنظيف جدران وأرضية الخزان وإزالة الرواسب والطحالب" },
  { name: "التعقيم", text: "تعقيم بالكلور المعتمد من البلدية للقضاء على البكتيريا" },
  { name: "الشطف والتسليم", text: "شطف نهائي وتسليم مع شهادة صحية معتمدة" }
];

const tankServices = [
  { name: "الخزانات الأرضية", desc: "تنظيف وتعقيم الخزانات الأرضية بمختلف الأحجام" },
  { name: "الخزانات العلوية", desc: "تنظيف خزانات الأسطح مع فحص التمديدات" },
  { name: "عزل الإيبوكسي", desc: "عزل مائي وحراري يمنع التسرب والتلوث" },
  { name: "العزل الأسمنتي", desc: "عزل اقتصادي فعال للخزانات الخرسانية" },
  { name: "كشف التسربات", desc: "فحص شامل للكشف عن أي تسريب في الخزان" },
  { name: "إصلاح الشروخ", desc: "معالجة الشروخ والشقوق قبل العزل" }
];
---

<Base title={pageTitle} description={pageDescription}>

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": pageTitle,
    "description": pageDescription,
    "provider": { "@type": "LocalBusiness", "name": company.name, "telephone": `+${company.whatsapp}` },
    "areaServed": { "@type": "Place", "name": `حي ${neighborhood}، الرياض` }
  })} />

  <!-- Hero -->
  <section class="bg-slate-900 text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0">
      <img src={service?.image} alt={pageTitle} class="w-full h-full object-cover opacity-30" />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/90 to-slate-900/70"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">

      
      <div class="max-w-3xl">
        <span class="inline-flex items-center gap-2 bg-blue-500/20 text-blue-400 px-4 py-2 rounded-full text-sm font-bold mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/></svg>
          مياه نقية وصحية
        </span>
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6">{pageTitle}</h1>
        <p class="text-xl text-slate-300 mb-8">نقدم خدمات تنظيف وتعقيم الخزانات لسكان حي <strong>{neighborhood}</strong>.</p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`tel:${company.phone}`} class="bg-secondary text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-cyan-600 transition-colors flex items-center justify-center gap-2">اتصل الآن</a>
          <a href={`https://wa.me/${company.whatsapp}`} class="bg-green-500 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-green-600 transition-colors">واتساب</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block bg-blue-500/10 text-blue-500 px-4 py-2 rounded-full text-sm font-bold mb-4">خدماتنا</span>
        <h2 class="text-3xl font-heading font-bold text-slate-900">خدمات تنظيف الخزانات في حي {neighborhood}</h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
        {tankServices.map(tankService => (
          <div class="bg-slate-50 p-6 rounded-2xl border border-slate-100 hover:shadow-lg hover:border-blue-200 transition-all group">
            <div class="w-12 h-12 bg-blue-500/10 text-blue-500 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/></svg>
            </div>
            <h3 class="font-bold text-slate-900 mb-2">{tankService.name}</h3>
            <p class="text-slate-500 text-sm">{tankService.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- HowTo Section -->
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-heading font-bold text-slate-900">خطوات تنظيف الخزان</h2>
      </div>
      <div class="max-w-3xl mx-auto space-y-6">
        {howToSteps.map((step, index) => (
          <div class="flex gap-6 items-start">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-bold shrink-0">{index + 1}</div>
            <div class="flex-1 bg-white p-6 rounded-2xl shadow-sm">
              <h3 class="font-bold text-slate-900 mb-2">{step.name}</h3>
              <p class="text-slate-600">{step.text}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="bg-slate-50 p-8 md:p-12 rounded-3xl">
        <h2 class="text-3xl font-heading font-bold text-slate-900 mb-8">تنظيف خزانات حي {neighborhood}</h2>
        <div class="prose prose-lg text-slate-600">
          <p>يُعد حي {neighborhood} من الأحياء الراقية في شمال الرياض. نقدم لسكانه خدمات تنظيف خزانات احترافية:</p>
          <ul class="space-y-2 my-6">
            <li>✓ تنظيف الخزانات الأرضية والعلوية</li>
            <li>✓ تعقيم بمواد مصرحة من البلدية</li>
            <li>✓ عزل الخزانات بالإيبوكسي</li>
            <li>✓ كشف وإصلاح التسربات</li>
            <li>✓ شهادة صحية معتمدة</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Neighborhoods -->
  <section class="py-16 bg-slate-50">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-900 mb-8 text-center">أحياء أخرى نخدمها</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/services/water-tanks-narjis" class="px-6 py-3 bg-white rounded-full hover:bg-primary hover:text-white transition-colors shadow-sm">حي النرجس</a>
        <a href="/services/water-tanks-yasmin" class="px-6 py-3 bg-white rounded-full hover:bg-primary hover:text-white transition-colors shadow-sm">حي الياسمين</a>
        <a href="/services/water-tanks-hittin" class="px-6 py-3 bg-white rounded-full hover:bg-primary hover:text-white transition-colors shadow-sm">حي حطين</a>
        <a href="/services/water-tanks-aqiq" class="px-6 py-3 bg-white rounded-full hover:bg-primary hover:text-white transition-colors shadow-sm">حي العقيق</a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-blue-800 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-heading font-bold text-white mb-6">احجز تنظيف خزانك الآن</h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={`tel:${company.phone}`} class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold text-lg">{company.phone}</a>
        <a href={`https://wa.me/${company.whatsapp}`} class="bg-green-500 text-white px-8 py-4 rounded-xl font-bold text-lg">واتساب</a>
      </div>
    </div>
  </section>
</Base>
