---
/**
 * صفحة اتصل بنا
 * ================
 * نموذج اتصال HTML بسيط (بدون JavaScript)
 * 
 * للتعديل: غيّر النصوص ومعلومات الاتصال في src/data/siteInfo.ts
 */

import Base from '../layouts/Base.astro';
import { company } from '../data/siteInfo';
---

<Base 
  title="اتصل بنا" 
  description="تواصل مع شركة العالمية كلين للحصول على خدمات التنظيف المتكاملة. اتصل بنا على 0500801225 أو أرسل رسالة واتساب."
>

  <!-- ==================== HEADER ==================== -->
  <section class="bg-slate-900 text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/50 to-slate-900 z-0"></div>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">اتصل بنا</h1>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto">
        نحن هنا لمساعدتك. تواصل معنا بأي طريقة تناسبك
      </p>
    </div>
  </section>


  <!-- ==================== CONTACT CONTENT ==================== -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-heading font-bold text-slate-900 mb-6">أرسل لنا رسالة</h2>
          <p class="text-slate-500 mb-8">املأ النموذج وسنرد عليك خلال 24 ساعة</p>
          
          <!-- 
            نموذج HTML بسيط
            =================
            لتفعيل إرسال النموذج، يمكنك:
            1. استخدام Netlify Forms (أضف netlify إلى الـ form)
            2. استخدام Formspree أو خدمة مشابهة
            3. ربطه بـ API خاص بك
          -->
          <form 
            action="https://formspree.io/f/YOUR_FORM_ID" 
            method="POST"
            class="space-y-6"
          >
            <!-- الاسم -->
            <div>
              <label for="name" class="block text-sm font-bold text-slate-700 mb-2">الاسم الكامل</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                placeholder="أدخل اسمك الكامل"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all bg-slate-50"
              />
            </div>
            
            <!-- الجوال -->
            <div>
              <label for="phone" class="block text-sm font-bold text-slate-700 mb-2">رقم الجوال</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required
                placeholder="05xxxxxxxx"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all bg-slate-50"
                dir="ltr"
              />
            </div>
            
            <!-- الخدمة -->
            <div>
              <label for="service" class="block text-sm font-bold text-slate-700 mb-2">الخدمة المطلوبة</label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all bg-slate-50"
              >
                <option value="">اختر الخدمة</option>
                <option value="تنظيف فلل">تنظيف فلل وقصور</option>
                <option value="مكافحة حشرات">مكافحة الحشرات</option>
                <option value="تنظيف خزانات">تنظيف الخزانات</option>
                <option value="غسيل مكيفات">غسيل المكيفات</option>
                <option value="غسيل كنب">غسيل الكنب والمجالس</option>
                <option value="جلي رخام">جلي وتلميع الرخام</option>
                <option value="أخرى">خدمة أخرى</option>
              </select>
            </div>
            
            <!-- الرسالة -->
            <div>
              <label for="message" class="block text-sm font-bold text-slate-700 mb-2">تفاصيل إضافية</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                placeholder="اكتب أي تفاصيل إضافية (اختياري)..."
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all bg-slate-50 resize-none"
              ></textarea>
            </div>
            
            <!-- زر الإرسال -->
            <button 
              type="submit"
              class="w-full bg-secondary text-white py-4 rounded-xl font-bold text-lg hover:bg-cyan-600 transition-colors shadow-lg shadow-cyan-500/30"
            >
              إرسال الطلب
            </button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-heading font-bold text-slate-900 mb-6">معلومات الاتصال</h2>
          <p class="text-slate-500 mb-8">أو تواصل معنا مباشرة عبر:</p>
          
          <div class="space-y-6">
            
            <!-- Phone -->
            <a href={`tel:${company.phone}`} class="flex items-center gap-4 p-6 bg-slate-50 rounded-2xl hover:bg-slate-100 transition-colors group">
              <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center text-green-600 group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
              </div>
              <div>
                <div class="text-sm text-slate-500">اتصل بنا</div>
                <div class="font-bold text-slate-900 text-lg" dir="ltr">{company.phone}</div>
              </div>
            </a>
            
            <!-- WhatsApp -->
            <a href={`https://wa.me/${company.whatsapp}`} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 p-6 bg-slate-50 rounded-2xl hover:bg-slate-100 transition-colors group">
              <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center text-green-600 group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"></path></svg>
              </div>
              <div>
                <div class="text-sm text-slate-500">واتساب</div>
                <div class="font-bold text-slate-900 text-lg">تواصل الآن</div>
              </div>
            </a>
            
            <!-- Email -->
            <a href={`mailto:${company.email}`} class="flex items-center gap-4 p-6 bg-slate-50 rounded-2xl hover:bg-slate-100 transition-colors group">
              <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
              </div>
              <div>
                <div class="text-sm text-slate-500">البريد الإلكتروني</div>
                <div class="font-bold text-slate-900 text-lg">{company.email}</div>
              </div>
            </a>
            
            <!-- Address -->
            <div class="flex items-center gap-4 p-6 bg-slate-50 rounded-2xl">
              <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center text-red-600">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg>
              </div>
              <div>
                <div class="text-sm text-slate-500">العنوان</div>
                <div class="font-bold text-slate-900">{company.address}</div>
              </div>
            </div>
            
          </div>
          
          <!-- Working Hours -->
          <div class="mt-8 p-6 bg-primary/5 rounded-2xl border border-primary/10">
            <h3 class="font-bold text-slate-900 mb-2">ساعات العمل</h3>
            <p class="text-slate-600">{company.workingHours}</p>
          </div>
        </div>
        
      </div>
    </div>
  </section>

</Base>

