---
/**
 * مقالة: دليل تنظيف الفلل بالرياض
 */
import Base from '../../layouts/Base.astro';
import { company, services } from '../../data/siteInfo';
import { blogPosts } from '../../data/blogPosts';

const post = blogPosts.find(p => p.slug === 'دليل-تنظيف-الفلل-بالرياض')!;
const relatedPosts = blogPosts.filter(p => p.id !== post.id).slice(0, 3);
---

<Base 
  title={post.title}
  description={post.excerpt}
>

  <!-- Schema Markup for Article -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": post.excerpt,
    "image": post.image,
    "author": {
      "@type": "Organization",
      "name": company.name
    },
    "publisher": {
      "@type": "Organization",
      "name": company.name,
      "logo": {
        "@type": "ImageObject",
        "url": `${company.siteUrl}/favicon.svg`
      }
    },
    "datePublished": post.publishDate,
    "dateModified": post.publishDate
  })} />

  <!-- ==================== ARTICLE HEADER ==================== -->
  <section class="bg-slate-900 text-white py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/50 to-slate-900 z-0"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->

        
        <span class="inline-block bg-secondary text-white px-4 py-1 rounded-full text-sm font-bold mb-4">
          {post.category}
        </span>
        <h1 class="text-3xl md:text-5xl font-heading font-bold mb-6 leading-tight">{post.title}</h1>
        
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-6 text-slate-300">
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            {post.author}
          </span>
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="18" height="18" x="3" y="4" rx="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            {new Date(post.publishDate).toLocaleDateString('ar-SA')}
          </span>
          <span class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            {post.readTime}
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Image -->
  <div class="container mx-auto px-4 -mt-8 relative z-20">
    <div class="max-w-4xl mx-auto">
      <img src={post.image} alt={post.title} class="w-full h-[400px] object-cover rounded-2xl shadow-2xl" />
    </div>
  </div>


  <!-- ==================== ARTICLE CONTENT ==================== -->
  <article class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Social Share Buttons -->
        <div class="flex items-center gap-3 mb-8 pb-8 border-b border-slate-100">
          <span class="text-sm font-bold text-slate-500">شارك المقال:</span>
          <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#1DA1F2] text-white flex items-center justify-center hover:opacity-80 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
          </a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#1877F2] text-white flex items-center justify-center hover:opacity-80 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href={`https://wa.me/?text=${encodeURIComponent(post.title + ' ' + company.siteUrl + '/blog/' + post.slug)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#25D366] text-white flex items-center justify-center hover:opacity-80 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"></path></svg>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(company.siteUrl + '/blog/' + post.slug)}&title=${encodeURIComponent(post.title)}`} target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-[#0A66C2] text-white flex items-center justify-center hover:opacity-80 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          </a>
        </div>

        <!-- Summary Box (الخلاصة) -->
        <div class="bg-gradient-to-r from-primary/5 to-secondary/5 border-r-4 border-primary p-6 rounded-2xl mb-10">
          <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" x2="8" y1="13" y2="13"></line><line x1="16" x2="8" y1="17" y2="17"></line><line x1="10" x2="8" y1="9" y2="9"></line></svg>
            الخلاصة
          </h2>
          <ul class="space-y-2 text-slate-700">
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>تنظيف الفلل في الرياض يتطلب معدات متخصصة وفريق مدرب</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>أفضل شركات التنظيف توفر خدمات شاملة (رخام، مسابح، واجهات)</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>التعقيم بالبخار يزيل 99.9% من الجراثيم والبكتيريا</span>
            </li>
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-secondary shrink-0 mt-0.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path d="m9 11 3 3L22 4"></path></svg>
              <span>الفيلا المتوسطة (300-400م) تحتاج يوماً كاملاً للتنظيف الشامل</span>
            </li>
          </ul>
        </div>

        <!-- Article Body -->
        <div class="prose prose-lg prose-slate max-w-none">
          
          <h2 class="text-2xl font-bold text-slate-900 mb-4">مقدمة: لماذا تحتاج فيلتك في الرياض لتنظيف احترافي؟</h2>
          
          <p class="text-slate-600 leading-relaxed mb-6">
            تُعد مدينة <strong>الرياض</strong> من أكثر المدن تعرضاً للغبار والأتربة على مستوى المملكة العربية السعودية، وذلك بسبب موقعها الجغرافي في قلب الصحراء العربية. هذا الأمر يجعل تنظيف الفلل والقصور تحدياً حقيقياً يتطلب خبرة ومعدات متخصصة لا تتوفر عادة في المنازل.
          </p>

          <p class="text-slate-600 leading-relaxed mb-6">
            في <a href="/" class="text-primary font-bold hover:underline">العالمية كلين</a>، نتفهم تماماً احتياجات سكان الرياض من أصحاب الفلل والقصور الفاخرة. على مدار أكثر من 10 سنوات، قمنا بتنظيف آلاف الفلل في جميع أحياء الرياض، من <strong>حي النخيل</strong> إلى <strong>حي الملقا</strong> و<strong>حي المحمدية</strong>.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">ما الذي يشمله تنظيف الفلل الشامل؟</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            عندما نتحدث عن <a href="/services/cleaning-villas" class="text-primary font-bold hover:underline">تنظيف الفلل بالرياض</a>، فنحن لا نعني مجرد كنس وتنظيف سطحي. التنظيف الاحترافي يشمل:
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">1. تنظيف الأرضيات والرخام</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            الرخام الطبيعي يحتاج عناية خاصة. نستخدم ماكينات <a href="/services/marble-polishing" class="text-primary font-bold hover:underline">جلي الرخام</a> الإيطالية مع أقراص الألماس لإعادة اللمعان الطبيعي للأرضيات. هذه العملية تزيل الخدوش السطحية وتعيد للرخام بريقه الأصلي.
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">2. تنظيف النوافذ والواجهات الزجاجية</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            الفلل في الرياض غالباً ما تحتوي على واجهات زجاجية كبيرة تتعرض للغبار بشكل يومي. فريقنا مجهز بمعدات تنظيف الارتفاعات العالية لتنظيف جميع النوافذ حتى الأدوار العليا.
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">3. تعقيم الحمامات والمطابخ</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            نستخدم تقنية التعقيم بالبخار عند درجة حرارة 180 درجة مئوية، وهي كافية للقضاء على 99.9% من الجراثيم والبكتيريا والفيروسات. هذا مهم بشكل خاص للعائلات التي لديها أطفال صغار أو كبار سن.
          </p>

          <h3 class="text-xl font-bold text-slate-900 mb-3">4. تنظيف المكيفات</h3>
          <p class="text-slate-600 leading-relaxed mb-6">
            لا يكتمل <strong>تنظيف الفيلا</strong> دون الاهتمام بالمكيفات. الغبار المتراكم في المكيفات يقلل كفاءة التبريد ويزيد استهلاك الكهرباء. ننصح بـ <a href="/services/ac-cleaning" class="text-primary font-bold hover:underline">غسيل المكيفات</a> مرتين سنوياً على الأقل.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">أفضل أوقات تنظيف الفلل في الرياض</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            الكثير من عملائنا يسألون: متى أفضل وقت لتنظيف الفيلا؟ بناءً على خبرتنا الطويلة في الرياض، ننصح بما يلي:
          </p>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>بعد موجات الغبار:</strong> الرياض تشهد موجات غبار متكررة، خاصة في فصل الربيع. التنظيف بعد انتهاء الموجة مباشرة يضمن نتائج أفضل.</li>
            <li><strong>قبل المناسبات:</strong> الأعياد وحفلات الزفاف والمناسبات العائلية فرصة مثالية لتنظيف الفيلا.</li>
            <li><strong>عند الانتقال:</strong> سواء كنت تنتقل لفيلا جديدة أو تغادر واحدة، التنظيف الشامل ضروري.</li>
            <li><strong>كل 3-6 أشهر:</strong> للحفاظ على نظافة دائمة، ننصح بتنظيف شامل كل 3-6 أشهر.</li>
          </ul>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">كم تكلفة تنظيف الفلل في الرياض؟</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            تعتمد تكلفة <strong>تنظيف الفلل بالرياض</strong> على عدة عوامل:
          </p>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>المساحة:</strong> فيلا 300 متر تختلف عن قصر 1000 متر</li>
            <li><strong>عدد الطوابق:</strong> كل طابق إضافي يتطلب وقتاً وجهداً أكبر</li>
            <li><strong>نوع التنظيف:</strong> تنظيف عادي أم تنظيف عميق مع جلي رخام</li>
            <li><strong>الخدمات الإضافية:</strong> هل تحتاج <a href="/services/pest-control" class="text-primary font-bold hover:underline">مكافحة حشرات</a>؟ تنظيف مسابح؟</li>
          </ul>

          <p class="text-slate-600 leading-relaxed mb-6">
            في العالمية كلين، نقدم أسعاراً تنافسية مع ضمان الجودة. تواصل معنا للحصول على عرض سعر مجاني ومخصص لفيلتك.
          </p>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">نصائح للحفاظ على نظافة الفيلا بين جلسات التنظيف</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            بعد انتهاء فريق التنظيف من عمله، إليك بعض النصائح للحفاظ على النظافة لأطول فترة ممكنة:
          </p>

          <ol class="list-decimal list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>تهوية المنزل يومياً:</strong> افتح النوافذ صباحاً لمدة 15 دقيقة لتجديد الهواء</li>
            <li><strong>استخدم ممسحة عند المدخل:</strong> هذا يقلل كمية الغبار الداخل للمنزل</li>
            <li><strong>نظف البقع فوراً:</strong> لا تترك البقع تجف على الرخام أو السجاد</li>
            <li><strong>غيّر فلاتر المكيف شهرياً:</strong> أو نظفها على الأقل</li>
            <li><strong>استخدم منتجات مناسبة:</strong> لا تستخدم منتجات حمضية على الرخام</li>
          </ol>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">لماذا تختار العالمية كلين لتنظيف فيلتك؟</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            عندما تبحث عن <strong>شركة تنظيف فلل بالرياض</strong>، ستجد خيارات كثيرة. لكن ما يميز العالمية كلين:
          </p>

          <ul class="list-disc list-inside text-slate-600 mb-6 space-y-2">
            <li><strong>خبرة +10 سنوات:</strong> نعرف الرياض وتحدياتها جيداً</li>
            <li><strong>فريق مدرب:</strong> عمالة فلبينية متخصصة ومرخصة</li>
            <li><strong>معدات حديثة:</strong> ماكينات إيطالية وألمانية</li>
            <li><strong>مواد آمنة:</strong> 100% آمنة للأطفال والحيوانات الأليفة</li>
            <li><strong>ضمان الرضا:</strong> إذا لم تعجبك النتيجة، نعيد التنظيف مجاناً</li>
            <li><strong>خدمة 24/7:</strong> متاحون في أي وقت تحتاجنا</li>
          </ul>

          <h2 class="text-2xl font-bold text-slate-900 mb-4 mt-10">الخلاصة</h2>

          <p class="text-slate-600 leading-relaxed mb-6">
            تنظيف الفلل في الرياض ليس مجرد رفاهية، بل ضرورة للحفاظ على صحة عائلتك وجمال منزلك. مع الغبار المستمر والأتربة، تحتاج لفريق محترف يفهم التحديات ويملك الأدوات المناسبة.
          </p>

          <p class="text-slate-600 leading-relaxed mb-6">
            في <a href="/" class="text-primary font-bold hover:underline">العالمية كلين</a>، نحن هنا لنجعل حياتك أسهل. تواصل معنا اليوم على <a href={`tel:${company.phone}`} class="text-primary font-bold hover:underline" dir="ltr">{company.phone}</a> أو عبر <a href={`https://wa.me/${company.whatsapp}`} class="text-primary font-bold hover:underline">واتساب</a> للحصول على عرض سعر مجاني.
          </p>

        </div>

        <!-- Tags -->
        <div class="mt-10 pt-8 border-t border-slate-100">
          <span class="text-sm font-bold text-slate-500 mb-3 block">الكلمات المفتاحية:</span>
          <div class="flex flex-wrap gap-2">
            {post.keywords.map(keyword => (
              <span class="bg-slate-100 text-slate-600 px-3 py-1 rounded-full text-sm">{keyword}</span>
            ))}
          </div>
        </div>

        <!-- CTA Box -->
        <div class="mt-10 bg-gradient-to-r from-primary to-blue-700 p-8 rounded-2xl text-white text-center">
          <h3 class="text-2xl font-bold mb-3">هل تحتاج تنظيف فيلتك؟</h3>
          <p class="text-blue-100 mb-6">احصل على عرض سعر مجاني خلال 24 ساعة</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`tel:${company.phone}`} class="bg-white text-primary px-6 py-3 rounded-xl font-bold hover:bg-blue-50 transition-colors">
              اتصل الآن
            </a>
            <a href={`https://wa.me/${company.whatsapp}`} class="bg-green-500 text-white px-6 py-3 rounded-xl font-bold hover:bg-green-600 transition-colors">
              واتساب
            </a>
          </div>
        </div>

      </div>
    </div>
  </article>


  <!-- ==================== RELATED ARTICLES ==================== -->
  <section class="py-16 bg-slate-50">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-heading font-bold text-slate-900 mb-8 text-center">مقالات ذات صلة</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {relatedPosts.map(p => (
          <a href={`/blog/${p.slug}`} class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
            <div class="h-40 overflow-hidden">
              <img src={p.image} alt={p.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform" />
            </div>
            <div class="p-4">
              <h3 class="font-bold text-slate-900 group-hover:text-primary transition-colors line-clamp-2">{p.title}</h3>
              <span class="text-xs text-slate-400">{p.readTime}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

</Base>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
